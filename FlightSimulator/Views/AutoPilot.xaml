<UserControl x:Class="FlightSimulator.Views.AutoPilot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
			 mc:Ignorable="d" 
			 
             d:DesignHeight="450" d:DesignWidth="450">
	<UserControl.Resources>
		<ResourceDictionary Source="ResourceDictionary.xaml" />
		</UserControl.Resources>
		<Grid>
		<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>


			<TextBox Name="AutoPilot1" Grid.Row="0" Margin="0,0,0,30" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"
				 Text="{Binding CommandsFromUser, UpdateSourceTrigger=PropertyChanged}" Background="{Binding ChangeColor,UpdateSourceTrigger=PropertyChanged}"/>
			<Button Style ="{StaticResource ResourceKey=StandardButton}" Name ="OK" HorizontalAlignment="Center" Grid.Row="1"  Content="OK" Margin="0,0,75,20" />
			<Button Style ="{StaticResource ResourceKey=StandardButton}" Name ="CLEAR" HorizontalAlignment="Center" Grid.Row="1" Content="Clear" Margin="75,0,0,20"/>
		</Grid>

</UserControl>
