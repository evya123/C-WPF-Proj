<UserControl x:Class="FlightSimulator.Views.AutoPilot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<TextBox Name="AutoPilot1" Grid.Row="0" Margin="0,0,0,20" Height="250" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"
				 Text="{Binding CommandsFromUser, UpdateSourceTrigger=PropertyChanged}" Background="{Binding ChangeColor,UpdateSourceTrigger=PropertyChanged}"/>
		<Button Name ="OK" HorizontalAlignment="Center" Grid.Row="1" Width="auto" FontWeight="DemiBold" Height="auto" Content="OK" Margin="0,0,50,0" Click="OK_Click"/>
		<Button Name ="CLEAR" HorizontalAlignment="Center" Grid.Row="1" FontWeight="DemiBold" Width="auto" Content="Clear" Margin="159,0,109,1" Click="CLEAR_Click"/>

	</Grid>
</UserControl>
